#SWITCH Function
#Calculater
{
  a = as.integer(readline("Enter the first num1 : "))  
  b = as.integer(readline("Enter the first num1 : ")) 
  condition <- readline("Enter the operation : ")
  {
    result = switch(condition,  
                    "+"= cat("Addition = ", a + b),  
                    "-"= cat("Subtraction =", a - b),  
                    "/"= cat("Division = ", a / b),  
                    "*"= cat("Multiplication =", a * b),
                    "%"= cat("Modulus =", a %% b),
                    "%/"= cat("=", a %/% b )
    )
  }
  result
}

